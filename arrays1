// program to print 1to 10 numbers i reverse

for(i=10;i>=0;i--){
    console.log(i);
}

// program to print 1 to 10 even numbers
// for logic 1 to 10
// condition: even numbers

for(i=0;i<=10;i++){
    
    if(i%2==0){
        console.log("evennum:",i);

    }
    if(i%2!==0){
        console.log("oddnum:",i);
    }
}

