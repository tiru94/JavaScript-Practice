// write a program to print array in reverse order

var arr2 = [2,4,5,3,6,8,7];
for(i=arr2.length-1;i>=0;i--){
    console.log(arr2[i]);
}

// arrays using to print negative numbers
var arr3 = [2,3,4,-4,7,-5,-3,4,5];
for(i=0;i<=arr3.length;i++){
    if(arr3[i]<0){
        console.log(arr3[i]);
    }
}

// print in reverse order
var arr4 = [2,3,4,-4,7,-5,-3,4,5];
arr4.reverse();
for(i=0;i<=arr4.length;i++){
    
        console.log(arr4[i]);
    
}

// print in postive number and negative number

var arr5 = [0, 1, 23, 4, -6, -8, 6, -7, 9];
var positiveCount = 0;
var negativeCount = 0;

for (var i = 0; i < arr5.length; i++) {
  if (arr5[i] > 0) {
    positiveCount++;
  } else if (arr5[i] < 0) {
    negativeCount++;
  }
}

console.log("Positive numbers count:", positiveCount);
console.log("Negative numbers count:", negativeCount);








